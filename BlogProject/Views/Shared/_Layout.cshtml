    <!--Summernote-->
    <script>
        $('#summernote').summernote({
            placeholder: 'Message',
            tabsize: 2,
            height: 120,
            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'underline', 'clear']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'video']],
                ['view', ['fullscreen', 'codeview', 'help']]
            ]
        });
    </script>

    <script>
        var bannerClosed = localStorage.getItem('hiddenBanner');

        function hideBanner() {
            localStorage.setItem('hiddenBanner', 'true');
            document.getElementById('topBanner').classList.add("d-none");
        }

        if (bannerClosed == "true") {
            hideBanner();
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
