@page
@model RegisterModel
@{
    ViewData["Title"] = "Sign Up";
}


<section>
    <div class="container">
        <div class="row">
            <div class="col-7 mx-auto">
                <div class="bg-primary-soft rounded p-4 p-sm-5">
                    <!-- Form START -->
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data" class="row mt-2">
                        <h2 class="text-center">Create Account </h2>
                        <span class="text-center mb-3">Have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"><u>Login</u></a></span>
                        <div class="col-sm-12 col-xxl-5 mt-2">
                            <!--Profile Pic-->
                            <div class="mt-4 mb-4 d-flex justify-content-center">
                                <div class="profilepic">
                                    <div class="profilepic__content">
                                        <span class="profilepic__icon"><i class="fas fa-camera" style="font-size: 20px;"></i></span>
                                        <span class="profilepic__text">Add Photo</span>
                                    </div>
                                    <label>
                                        <input onchange=file_changed() asp-for="Input.ImageFile" type="file" id="my_file" style="display: none; object-fit: cover;" accept=".jpg,.jpeg,.png,.svg,.gif" />
                                        <img id=img_upload class="profilepic__image" src="/images/defaultUserImage.jpg" alt="Profile Pic" />
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-xxl-7 mt-2">
                            <!-- First Name -->
                            <div class="mb-3">
                                <input asp-for="Input.FirstName" type="text" class="form-control" id="exampleInputFirstName" aria-label="firstNameHelp" placeholder="First Name">
                            </div>
                            <!-- Last Name -->
                            <div class="mb-3">
                                <input asp-for="Input.LastName" type="text" class="form-control" id="exampleInputLastName" aria-label="lastNameHelp" placeholder="Last Name">
                            </div>
                            <!-- Email -->
                            <div class="mb-3">
                                <input asp-for="Input.Email" type="email" class="form-control" id="exampleInputEmail1" aria-label="emailHelp" placeholder="Email">
                            </div>
                            <!-- Password -->
                            <div class="mb-3">
                                <input asp-for="Input.Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="*********">
                            </div>
                            <!-- Confirm Password -->
                            <div class="mb-3">
                                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" id="exampleInputPassword2" placeholder="*********">
                            </div>
                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <!-- Button -->
                        <div class="col-12 mt-3 d-grid">
                            <button type="submit" class="btn btn-primary btn-md">Create Account</button>
                        </div>
                    </form>

                    <!-- Form END -->
                    <hr class="mt-3 mb-3">
                    <p class="text-center">or create an account with</p>

                    <!-- Social-media btn -->
                    <ul class="row list-unstyled d-sm-flex mt-3 justify-content-center">
                        <li class="col-6 d-grid">
                            <a href="#" class="btn bg-facebook"><i class="fab fa-facebook-f me-2"></i> Facebook</a>
                        </li>
                        <li class="col-6 d-grid">
                            <a href="#" class="btn bg-google"><i class="fab fa-google me-2"></i> google</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

